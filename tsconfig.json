{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,
      "noEmit": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }